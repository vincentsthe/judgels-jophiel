# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Imports
->             /                          commons.Routes

# Map static resources from the /public folder to the /assets URL path
GET            /assets/*file              controllers.Assets.at(path="/public", file)
GET            /vassets/*file             controllers.Assets.versioned(path="/public", file: Asset)

GET            /user                      @org.iatoki.judgels.jophiel.controllers.UserController.index()
GET            /user/                     @org.iatoki.judgels.jophiel.controllers.UserController.list(pageIndex: Long ?= 0, orderBy ?= "id", orderDir ?= "asc", filterString ?= "")
GET            /user/create               @org.iatoki.judgels.jophiel.controllers.UserController.create()
POST           /user/create               @org.iatoki.judgels.jophiel.controllers.UserController.postCreate()
GET            /user/:uId/view            @org.iatoki.judgels.jophiel.controllers.UserController.view(uId: Long)
GET            /user/:uId/update          @org.iatoki.judgels.jophiel.controllers.UserController.update(uId: Long)
POST           /user/:uId/update          @org.iatoki.judgels.jophiel.controllers.UserController.postUpdate(uId: Long)
GET            /user/:uId/delete          @org.iatoki.judgels.jophiel.controllers.UserController.delete(uId: Long)

GET            /client                    @org.iatoki.judgels.jophiel.controllers.ClientController.index()
GET            /client/                   @org.iatoki.judgels.jophiel.controllers.ClientController.list(pageIndex: Long ?= 0, orderBy ?= "id", orderDir ?= "asc", filterString ?= "")
GET            /client/create             @org.iatoki.judgels.jophiel.controllers.ClientController.create()
POST           /client/create             @org.iatoki.judgels.jophiel.controllers.ClientController.postCreate()
GET            /client/:cId/view          @org.iatoki.judgels.jophiel.controllers.ClientController.view(cId: Long)
GET            /client/:cId/update        @org.iatoki.judgels.jophiel.controllers.ClientController.update(cId: Long)
POST           /client/:cId/update        @org.iatoki.judgels.jophiel.controllers.ClientController.postUpdate(cId: Long)
GET            /client/:cId/delete        @org.iatoki.judgels.jophiel.controllers.ClientController.delete(cId: Long)

GET            /serviceLogin              @org.iatoki.judgels.jophiel.controllers.OpenIdConnectController.login(continueUrl: String ?= "")
POST           /serviceLogin              @org.iatoki.judgels.jophiel.controllers.OpenIdConnectController.postLogin(continueUrl: String ?= "")
GET            /auth                      @org.iatoki.judgels.jophiel.controllers.OpenIdConnectController.authRequest()
POST           /auth                      @org.iatoki.judgels.jophiel.controllers.OpenIdConnectController.postAuthRequest(hash: String)
POST           /token                     @org.iatoki.judgels.jophiel.controllers.OpenIdConnectController.token()
GET            /userinfo                  @org.iatoki.judgels.jophiel.controllers.OpenIdConnectController.userInfo()
POST           /userinfo                  @org.iatoki.judgels.jophiel.controllers.OpenIdConnectController.userInfo()
OPTIONS        /userAutoComplete          @org.iatoki.judgels.jophiel.controllers.OpenIdConnectController.checkPreUserAutocompleteList()
GET            /userAutoComplete          @org.iatoki.judgels.jophiel.controllers.OpenIdConnectController.userAutoCompleteList()
GET            /verifyUser                @org.iatoki.judgels.jophiel.controllers.OpenIdConnectController.verifyUserJid()
GET            /userInfoByJid             @org.iatoki.judgels.jophiel.controllers.OpenIdConnectController.getInfoByUserJid()

GET            /register                  @org.iatoki.judgels.jophiel.controllers.UserController.register()
POST           /register                  @org.iatoki.judgels.jophiel.controllers.UserController.postRegister()