# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Imports
->             /                                 commons.Routes

# Map static resources from the /public folder to the /assets URL path
GET            /assets/*file                     controllers.Assets.at(path="/public", file)
GET            /vassets/*file                    controllers.Assets.versioned(path="/public", file: Asset)

GET            /users                            @org.iatoki.judgels.jophiel.controllers.UserController.index()
GET            /users/                           @org.iatoki.judgels.jophiel.controllers.UserController.list(pageIndex: Long ?= 0, orderBy ?= "id", orderDir ?= "asc", filterString ?= "")
GET            /users/create                     @org.iatoki.judgels.jophiel.controllers.UserController.create()
POST           /users/create                     @org.iatoki.judgels.jophiel.controllers.UserController.postCreate()
GET            /users/:uId/view                  @org.iatoki.judgels.jophiel.controllers.UserController.view(uId: Long)
GET            /users/:uId/update                @org.iatoki.judgels.jophiel.controllers.UserController.update(uId: Long)
POST           /users/:uId/update                @org.iatoki.judgels.jophiel.controllers.UserController.postUpdate(uId: Long)
GET            /users/:uId/delete                @org.iatoki.judgels.jophiel.controllers.UserController.delete(uId: Long)

GET            /clients                          @org.iatoki.judgels.jophiel.controllers.ClientController.index()
GET            /clients/                         @org.iatoki.judgels.jophiel.controllers.ClientController.list(pageIndex: Long ?= 0, orderBy ?= "id", orderDir ?= "asc", filterString ?= "")
GET            /clients/create                   @org.iatoki.judgels.jophiel.controllers.ClientController.create()
POST           /clients/create                   @org.iatoki.judgels.jophiel.controllers.ClientController.postCreate()
GET            /clients/:cId/view                @org.iatoki.judgels.jophiel.controllers.ClientController.view(cId: Long)
GET            /clients/:cId/update              @org.iatoki.judgels.jophiel.controllers.ClientController.update(cId: Long)
POST           /clients/:cId/update              @org.iatoki.judgels.jophiel.controllers.ClientController.postUpdate(cId: Long)
GET            /clients/:cId/delete              @org.iatoki.judgels.jophiel.controllers.ClientController.delete(cId: Long)

GET            /serviceLogin                     @org.iatoki.judgels.jophiel.controllers.OpenIdConnectController.login(continueUrl: String ?= "")
POST           /serviceLogin                     @org.iatoki.judgels.jophiel.controllers.OpenIdConnectController.postLogin(continueUrl: String ?= "")
GET            /serviceProfile/:continueUrl      @org.iatoki.judgels.jophiel.controllers.OpenIdConnectController.profile(continueUrl: String)
POST           /serviceProfile/:continueUrl      @org.iatoki.judgels.jophiel.controllers.OpenIdConnectController.postProfile(continueUrl: String)
POST           /serviceProfile/avatar/:continueUrl @org.iatoki.judgels.jophiel.controllers.OpenIdConnectController.postAvatar(continueUrl: String)
GET            /serviceLogout/:continueUrl       @org.iatoki.judgels.jophiel.controllers.OpenIdConnectController.logout(continueUrl: String)
GET            /auth                             @org.iatoki.judgels.jophiel.controllers.OpenIdConnectController.authRequest()
POST           /auth                             @org.iatoki.judgels.jophiel.controllers.OpenIdConnectController.postAuthRequest(hash: String)
POST           /token                            @org.iatoki.judgels.jophiel.controllers.OpenIdConnectController.token()
GET            /userinfo                         @org.iatoki.judgels.jophiel.controllers.OpenIdConnectController.userInfo()
POST           /userinfo                         @org.iatoki.judgels.jophiel.controllers.OpenIdConnectController.userInfo()
OPTIONS        /userAutoComplete                 @org.iatoki.judgels.jophiel.controllers.OpenIdConnectController.checkPreUserAutocompleteList()
GET            /userAutoComplete                 @org.iatoki.judgels.jophiel.controllers.OpenIdConnectController.userAutoCompleteList()
GET            /verifyUser                       @org.iatoki.judgels.jophiel.controllers.OpenIdConnectController.verifyUsername()
GET            /userInfoByJid                    @org.iatoki.judgels.jophiel.controllers.OpenIdConnectController.getInfoByUserJid()

GET            /                                 @org.iatoki.judgels.jophiel.controllers.ApplicationController.index()
